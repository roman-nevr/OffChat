<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.berendeev.roma.offchat.app">

    <application
        android:name="org.berendeev.roma.offchat.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service
            android:name="org.berendeev.roma.offchat.service.BotService"
            android:process="@string/service_process_name"/>
        <receiver
            android:name="org.berendeev.roma.offchat.MessageBroadcastReceiver">
            <intent-filter>
                <action android:name="org.berendeev.roma.offchat.service.BOT_BROADCAST"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>